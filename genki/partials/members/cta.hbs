{{#has visibility="paid"}}
<div class="members-cta">
	<h2>{{{t "This post is for {start-italic}paying subscribers{end-italic} only" start-italic="<span>" end-italic="</span>"}}}</h2>
	{{#if @member}}
	<p>{{t "Upgrade your account to read the post and get access to the full library of posts for paying subscribers only."}}</p>
	<a href="javascript:" class="members-cta-button global-button" data-portal="account/plans">{{t "See plans"}}</a>
	{{else}}
	<p>{{t "Sign up now and upgrade your account to read the post and get access to the full library of posts for paying subscribers only."}}</p>
	<a class="members-cta-button global-button" href="{{@site.url}}/signup/">{{t "Sign up now"}}</a>
	<small class="global-question">{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small>
	{{/if}}
</div>
{{else has visibility="tiers"}}
<div class="members-cta">
	<h2>{{{plural tiers.length empty=(t "No tiers") singular=(t "This post is for {start-italic}subscribers{end-italic} with the tier:" start-italic="<span>" end-italic="</span>") plural=(t "This post is for {start-italic}subscribers{end-italic} with any of the tiers:" start-italic="<span>" end-italic="</span>")}}} {{tiers lastSeparator=(t "or") suffix=""}}</h2>
	{{#if @member}}
	<p>{{t "Upgrade your account to get access to the post."}}</p>
	<a href="javascript:" class="members-cta-button global-button" data-portal="account/plans">{{t "See plans"}}</a>
	{{else}}
	<p>{{t "Sign up now and upgrade your account to get access to the post."}}</p>
	<a class="members-cta-button global-button" href="{{@site.url}}/signup/">{{t "Sign up now"}}</a>
	<small class="global-question">{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small>
	{{/if}}
</div>
{{else has visibility="members"}}
<div class="members-cta">
	<h2>{{{t "This post is for {start-italic}subscribers{end-italic} only" start-italic="<span>" end-italic="</span>"}}}</h2>
	<p>{{t "Sign up now to read the post and get access to the full library of posts for subscribers only."}}</p>
	<a class="members-cta-button global-button" href="{{@site.url}}/signup/">{{t "Sign up now"}}</a>
	<small class="global-question">{{t "Already have an account?"}} <a href="{{@site.url}}/signin/">{{t "Sign in"}}</a></small>
</div>
{{/has}}